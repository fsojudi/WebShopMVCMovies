@model List<Movie>

<h1>Welcome to the Movie Page</h1>
<p> Here You Can Add New Movies</p>
<a asp-action="Create">Add Movie</a>



@foreach (Movie movie in Model)
{

    <div class="card mt-5 mb-4 mx-auto">
        <div class="card-header bg-white text-dark">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-auto"> Name</th>

                        <th class="col-auto"> Country</th>

                        <th class="col-auto"> Director</th>


                        <th class="col-auto"> Genre</th>


                        <th class="col-auto"> Price</th>


                        <th class="col-auto"> *</th>
                    </tr>
                </thead>
            </table>

        </div>
        <div className="card-body">

            <p class="card-text mt-3"><partial name="_MovieDisplay" model="movie" /></p>

        </div>
    </div>
}



