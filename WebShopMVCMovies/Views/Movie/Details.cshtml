@model Movie
@{
    ViewData["Title"] = "Movie Details";
}


<div class="card mt-5 mb-4 mx-auto" style="width: 400px;">
    <div class="card-header bg-dark text-white">
        Movie Details
    </div>
    <div className="card-body">

        <p class="card-text mt-2">*<span class="font-weight-bold"> Name:</span> @Model.Name</p>
        <p class="card-text">*<span class="font-weight-bold"> Director:</span> @Model.Director.DirectorName</p>
        <p class="card-text">*<span class="font-weight-bold"> Country:</span> @Model.Director.Country.CountryName</p>
        <p class="card-text mb-2">*<span class="font-weight-bold"> Genre:</span> @Model.Genre </p>
        <p class="card-text mb-2">
            *<span class="font-weight-bold"> Movie speeks:</span><a asp-action="MovieLanguage"
                                                                     asp-controller="Movie"
                                                                     asp-route-id="@Model.Id" class="mt-6 text-warning"> Languages </a>
        </p>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <a asp-action="Movie" class="mt-6 text-warning">Back</a>
        <hr />
        <a class="mt-6 text-warning" asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
    <div className="card-footer"></div>
</div>